<h4><%= ( (@document_type.new_record?)?'Creating':'Editting' ) %> document_type</h4>

<%= form_for(@document_type, :html => { :class => 'edit_document_type'} ) do |f| %>
<%= f.error_messages %>
<%= f.wrapped_text_field :key %>
<%= f.wrapped_text_field :title %>
<%= f.wrapped_text_field :description %>
<p>
<%= f.submit( (@document_type.new_record?)? "Create" : "Update" )%>&nbsp;
<%= link_to 'Back', document_types_path, :class => 'button' %>
</p>
<% end %>
