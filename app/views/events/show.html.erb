<% stylesheets(:event) %>

<div id='subject_control_bar'>
<h3>Subject Event</h3>
<% if current_user.may_update_events? %>
<div class='buttons'>
<%= link_to( 'Edit', edit_event_path(@operational_event),
	:class => 'button' ) %>
</div><!-- class='buttons' -->
<% end %>
</div>

<%= wrapped_datetime_spans :operational_event, :occurred_at,
	:label_text => 'event date:' %>

<div class='project field_wrapper'>
<span class='label'>project:</span>
<span class='value'><%= @operational_event.project %></span>
</div><!-- class='project' -->

<div class='category field_wrapper'>
<span class='label'>category:</span>
<span class='value'><%= @operational_event.operational_event_type.try(:event_category) %></span>
</div><!-- class='category' -->

<%= wrapped_spans :operational_event, :operational_event_type,
	:label_text => 'type:' %>

<%= wrapped_spans :operational_event, :description,
	:label_text => 'description:' %>



<%#= wrapped_spans :operational_event, :other_operational_event_type,
	:label_text => 'other:' %>
<%#

	TODO specify

%>


<div class='event_notes field_wrapper'>
<span class='label'>notes:</span>
<p class='value'><%= @operational_event.event_notes %></p>
</div><!-- class='event_notes' -->


<% if current_user.may_destroy_events? %>
<div class='dev_only'><span>Development only:</span>
<%= button_to( "Destroy", event_path(@operational_event), :method => 'delete', :form_class => 'destroy_link_to' ) %>
</div>
<% end %>
