<fieldset id='user'>
<legend><%= @user.sn %></legend>

<div class='person'><dl>
	<% %w( displayname mail uid ).each do |key| -%>
		<dt><%= key -%></dt>
		<dd><%= @user.attributes[key] -%></dd>
	<% end -%>
</dl>
</div>

<div id='roles'>
<%= user_roles() %>
</div>
 
</fieldset> 
<%= link_to "Back to all Users", users_path %>
