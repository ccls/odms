<% stylesheets(:users) %>
<h4>Users:</h4>
<% unless @users.to_a.empty? %>
<table id='users'>
<thead><tr>
<th>UID</th><th>Username</th><th>Role name(s)</th><th>&nbsp;</th>
</tr></thead><tbody>
<% @users.each do |user| %>
<tr class='<%=user.role_names.join(' ')-%> user row'>
<td class='uid'><%= user.uid %></td>
<!--
<td class='gravatar'>
<%#= link_to( image_tag(user.gravatar_url), "http://gravatar.com", :target => 'new' )%>
</td>
-->
<td class='username'>
<%= link_to user.displayname, user_path(user) -%>
</td>
<td class='role_name'>&nbsp;
<% user.role_names.each do |role_name| %>
<%= link_to role_name, users_path( :role_name => role_name ) -%>
<% end %>
</td>
<td class='manage'>
<%= button_to( 'Destroy', user_path(user), :method => 'delete', :form_class => 'destroy_link_to' ) %>
</td>
</tr>
<% end %>
</tbody></table><!-- id='users' -->
<% else %>
Sorry, no users yet.
<% end %>
