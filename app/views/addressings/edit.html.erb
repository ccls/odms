<%= form_for(@addressing,
	:url => study_subject_addressing_path(@addressing.study_subject_id,@addressing.id),
	:html => { :class => 'confirm edit_addressing' }) do |f| %>
<%= render 'form', :f => f %>
<% end %>

<% if current_user.may_destroy_addressings? %>
<div class='dev_only'><span>Development only:</span>
<%= (@addressing.new_record?)? "&nbsp".html_safe : button_to( "Destroy", study_subject_addressing_path(@addressing.study_subject_id, @addressing.id), :method => 'delete', :form_class => 'destroy_link_to' ) %>
</div>
<% end %>
