<h4><%= ( (@organization.new_record?)?'Creating':'Editting' ) %> organization</h4>

<%= form_for(@organization, :html => { :class => 'edit_organization'} ) do |f| %>
<%= f.error_messages %>
<%= f.wrapped_text_field :key %>
<%= f.wrapped_text_field :name %>
<%= f.wrapped_collection_select :person_id, Person.all, 
  :id, :to_s, :include_blank => true,
  :label_text => "Person" %>
<p>
<%= f.submit( (@organization.new_record?)? "Create" : "Update" )%>&nbsp;
<%= link_to 'Back', organizations_path, :class => 'button' %>
</p>
<% end %>
