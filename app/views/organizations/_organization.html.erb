<%= content_tag_for( :tr, organization, :class => 'row' ) do %>
 <td class='key'><%= organization.key -%></td>
 <td class='name'><%= organization.name -%></td>
 <td class='manage'>
<%= link_to( "View", organization_path(organization), :class => 'button' ) -%>&nbsp;
<%= link_to( "Edit", edit_organization_path(organization), :class => 'button' ) -%>&nbsp;
<%= form_tag organization, :method => :delete, :class => 'destroy_link_to' do %>
<%= hidden_field_tag 'confirm', "Destroy organization '#{organization}'?", :id => nil %>
<%= submit_tag 'Destroy', :name => nil %>
<% end %>
 </td>
<% end %><!-- class='organization' -->
