<%= content_tag_for :tr, document_version, :class => 'row' do %>
 <td class='title'>
  <%= document_version.title %>
 </td>
 <td class='description'>
  <%= document_version.description %>
 </td>
 <td class='manage'>
  <%= link_to( 'Edit', edit_document_version_path(document_version),
   :class => 'button' ) %>&nbsp;
<%= form_tag document_version, :method => :delete, :class => 'destroy_link_to' do %>
<%= hidden_field_tag 'confirm', "Destroy document_version '#{document_version}'?", :id => nil %>
<%= submit_tag 'Destroy', :name => nil %>
<% end %>
 </td>
<% end %>
