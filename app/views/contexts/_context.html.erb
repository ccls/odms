<%= content_tag_for( :tr, context, :class => 'row' ) do %>
 <td class='key'><%= context.key -%></td>
 <td class='description'><%= context.description -%></td>
 <td class='manage'>
<%= link_to( "View", context_path(context), :class => 'button' ) -%>&nbsp;
<%= link_to( "Edit", edit_context_path(context), :class => 'button' ) -%>&nbsp;
<%= form_tag context, :method => :delete, :class => 'destroy_link_to' do %>
<%= hidden_field_tag 'confirm', "Destroy context '#{context}'?", :id => nil %>
<%= submit_tag 'Destroy', :name => nil %>
<% end %>
 </td>
<% end %><!-- class='context' -->
