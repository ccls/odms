<div id='subsearch'>
<%= form_tag( url_for(:controller => params[:controller]),
	:method => :get) do %>
	<%= hidden_field_tag :order, params[:order], :id => nil %>
	<%= hidden_field_tag :dir, params[:dir], :id => nil %>
	<%= text_field_tag :q, params[:q], :id => nil  %>
	<%= submit_tag 'find' %>
	<%= submit_tag 'download' %>
<% end %>
</div><!-- subsearch -->
