<div class='matching'>
<h3>Matching Subjects:</h3>
<% if @study_subject and @study_subject.identifier %>
<% StudySubject.find(:all,
			:joins => :identifier,
			:conditions => { 
				'identifiers.matchingid' => @study_subject.identifier.matchingid
			}
		).each do |subject| %>

<p><%= link_to subject, subject %></p>

<% end %>
<% end %>
</div><!-- class='matching' -->
