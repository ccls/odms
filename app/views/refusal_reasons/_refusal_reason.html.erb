<%= content_tag_for :tr, refusal_reason, :class => 'row' do %>
 <td class='key'><%= refusal_reason.key %></td>
 <td class='description'><%= refusal_reason.description %></td>
 <td class='manage'>
  <%= link_to( 'Edit', edit_refusal_reason_path(refusal_reason),
      :class => 'button' ) %>&nbsp;
<%= form_tag refusal_reason, :method => :delete, :class => 'destroy_link_to' do %>
<%= hidden_field_tag 'confirm', "Destroy refusal_reason '#{refusal_reason}'?", :id => nil %>
<%= submit_tag 'Destroy', :name => nil %>
<% end %>
 </td>
<% end %>
