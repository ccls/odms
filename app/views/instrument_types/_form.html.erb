<h4><%= ( (@instrument_type.new_record?)?'Creating':'Editting' ) %> instrument_type</h4>

<%= form_for(@instrument_type, :html => { :class => 'edit_instrument_type'} ) do |f| %>
<%= f.error_messages %>
<%= f.wrapped_text_field :key %>
<%= f.wrapped_text_field :description %>
<%= f.wrapped_collection_select :project_id, Project.all, 
  :id, :to_s, :include_blank => true,
  :label_text => "Project" %>
<p>
<%= f.submit( (@instrument_type.new_record?)? "Create" : "Update" )%>&nbsp;
<%= link_to 'Back', instrument_types_path, :class => 'button' %>
</p>
<% end %>
