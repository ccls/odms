<% if @study_subject.is_case? %>
<% if @unrejected_controls.count > 0 %>
<%= form_tag controls_path(:case_id => @study_subject.id) do %>
<h3>Related Subjects
<%= submit_tag "add control ( #{@unrejected_controls.count} available )" %>
</h3>
<% end %>
<% else %><%# if @unrejected_controls.count > 0 %>
<h3>Related Subjects
<span>(No controls available.)</span>
</h3>
<% end %>
<% else %><%# if @study_subject.is_case? %>
<h3>Related Subjects
<span>(subject is control.)</span>
</h3>
<% end %>

<%#= render :partial => 'family' %>
<%= render :partial => 'matching' %>
<%#= render :partial => 'controls' %>
<%= render :partial => 'rejected_controls' %>
