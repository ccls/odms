<h4>Languages:</h4>
<% unless @languages.to_a.empty? %>
 <table id='languages'><thead><tr>
  <th>Code</th>
  <th>Key</th>
  <th>Description</th>
  <th>&nbsp;</th>
 </tr></thead><tbody>
  <%= render :partial => 'language', :collection => @languages %>
 </tbody></table>
<% else %>
 <p>Sorry, no languages yet.</p>
<% end %>
<p><%= link_to( 'Create new language', new_language_path, :class => 'button' ) %></p>
