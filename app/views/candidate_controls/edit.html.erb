<% stylesheets(:candidate_control) %>
<h2>Candidate Control</h2>

<% form_for @candidate do |f| %>
<%= f.error_messages %>

<%= render( :partial => 'duplicates', 
	:locals => {:f=>f} ) if @duplicates and !@duplicates.empty? %>

<div class='reject_control_wrapper'>
<div id='reject_control'>
<div class='info'>
<table><thead>
<tr><th>&nbsp;</th><th>name</th><th>studyid</th><th>childid</th><th>dob</th><th>sex</th><th>mother's race</th><th>mother's hisp</th><th>father's hisp</th></tr>
</thead><tbody>
<tr>
<td class='label'>subject</td>
<td><%= @study_subject.full_name %></td>
<td><%= @study_subject.studyid_to_s %></td>
<td><%= @study_subject.childid_to_s %></td>
<td><%=mdy @study_subject.dob %></td>
<td><%= @study_subject.sex %></td>
<td><%= (( !@study_subject.mother_race_id.blank?
	) ? Race.find(@study_subject.mother_race_id) : '&nbsp;' ) %></td>
<td>
<%#= YNODK[@study_subject.mother_hispanicity_id]||'&nbsp;' %>
<%=ynodk @study_subject.mother_hispanicity_id %>
</td>
<td>
<%#= YNODK[@study_subject.father_hispanicity_id]||'&nbsp;' %>
<%=ynodk @study_subject.father_hispanicity_id %>
</td>
</tr>
<tr>
<td class='label'>candidate control</td>
<td><%= @candidate.full_name %></td>
<td>-</td>
<td>-</td>
<td><%=mdy @candidate.dob %></td>
<td><%= @candidate.sex %></td>
<td><%= (( @candidate.mother_race_id
	) ? Race.find(@candidate.mother_race_id) : '&nbsp;' ) %></td>
<td>
<%#= YNODK[@candidate.mother_hispanicity_id]||'&nbsp;' %>
<%=ynodk @candidate.mother_hispanicity_id %>
</td>
<td>
<%#= YNODK[@candidate.father_hispanicity_id]||'&nbsp;' %>
<%=ynodk @candidate.father_hispanicity_id %>
</td>
</tr>
</tbody></table>
</div><!-- class='info' -->

<div class='disposition'>
<div>
<div><p>disposition</p></div>
<div>
<p><%= f.radio_button('reject_candidate',false) %>
<%= f.label('reject_candidate_false','accept control') %></p>
<p><%= f.radio_button('reject_candidate',true) %>
<%= f.label('reject_candidate_true','reject control') %></p>
</div>
<div class='rejection'>
<p><%= f.label('rejection_reason') %>
<%= f.text_area('rejection_reason',:rows => 10) %></p>
</div><!-- class='rejection' -->
</div>
</div><!-- class='disposition' -->
</div>
<p>
<%#= link_to 'cancel', case_path(@study_subject),:class => 'button' %>
<%= link_to 'cancel', related_subject_path(@study_subject),:class => 'button' %>
<%= f.submit 'continue' %>
</p>
</div><!-- class='reject_control_wrapper' -->
<% end %>
