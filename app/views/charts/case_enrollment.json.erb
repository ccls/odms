{
	"title":{
		"text":  "Total Case Enrollment",
		"style": "{font-size: 18px; font-family: Verdana; text-align: center;}"
	},
	"y_legend":{
		"text": "Count",
		"style": "{font-size: 12px;}"
	},
	"elements":[
{			"text" :     "Total Cases",
			"type":      "bar_glass",
			"alpha":     0.5,
			"colour":    "#0000FF",
			"font-size": 10,
			"values" :   [ <%= @total_counts.join(',')%> ]
},
{			"text" :     "Eligible",
			"type":      "bar_glass",
			"alpha":     0.5,
			"colour":    "#FF0000",
			"font-size": 10,
			"values" :   [ <%= @eligible_counts.join(',')%> ]
},
{			"text" :     "Consenting",
			"type":      "bar_glass",
			"alpha":     0.5,
			"colour":    "#00FF00",
			"font-size": 10,
			"values" :   [ <%= @consenting_counts.join(',')%> ]
}
	],
	"x_axis":{
		"stroke":1,
		"tick_height":10,
		"grid_colour":"#00ff00",
		"labels": {
			"labels": [<%=@orgs.collect{|o|"\"#{o.key}\""}.join(',').html_safe%>]
		}
	},
	"y_axis":{
		"stroke":      1,
		"tick_length": 3,
		"grid_colour": "#00ff00",
		"offset":      0,
		"steps":       <%=(@max_y/4).chart_round%>,
		"max":         <%= @max_y.chart_round%>
	}
}
