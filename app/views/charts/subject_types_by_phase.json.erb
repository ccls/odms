{
	"title":{
		"text":  "Subject Type Counts by Phase",
		"style": "{font-size: 18px; font-family: Verdana; text-align: center;}"
	},
	"x_legend":{
		"text": "Subject Type",
		"style": "{font-size: 12px;}"
	},
	"y_legend":{
		"text": "Count",
		"style": "{font-size: 12px;}"
	},
	"elements":[
<% subject_types = @study_subjects.collect(&:subject_type).uniq %>
<% colors = [ '#448844', '#884444', '#444488' ] %>
<%= @study_subjects.collect(&:phase).uniq.collect do |phase| %>
<% s_with_p = @study_subjects.select{|s|s.phase == phase} %>
<% counts = subject_types.collect{|st| s_with_p.select{|s|s.subject_type == st}.first.try(:count)||0 } %>
<%	
	"{\"text\" :      \"#{phase||'blank'}\",
		\"type\" :      \"bar_glass\",
		\"alpha\" :     0.5,
		\"colour\" :    \"#{colors.pop}\",
		\"font-size\" : 10,
		\"values\" :   [ #{counts.join(',')} ] 
	}" %>
<% end.join(',').html_safe %>
	],
	"x_axis":{
		"stroke":1,
		"tick_height":10,
		"grid_colour":"#00ff00",
		"labels": {
			"labels": [<%=subject_types.collect{|s| "\"#{s.to_s}\""}.join(',').html_safe%>]
		}
	},
	"y_axis":{
		"stroke":      1,
		"tick_length": 3,
		"grid_colour": "#00ff00",
		"offset":      0,
		"max":         <%=@study_subjects.collect{|s|s.count.to_i}.max.chart_round%>
	}
}
