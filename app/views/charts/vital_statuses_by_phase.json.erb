{
	"title":{
		"text":  "Vital Status Counts",
		"style": "{font-size: 18px; font-family: Verdana; text-align: center;}"
	},
	"x_legend":{
		"text": "Vital Status",
		"style": "{font-size: 12px;}"
	},
	"y_legend":{
		"text": "Count",
		"style": "{font-size: 12px;}"
	},
	"elements":[
		{
			"type":      "bar_glass",
			"alpha":     0.5,
			"colour":    "#CC9933",
			"font-size": 10,
			"values" :   [<%=@study_subjects.collect(&:count).join(',').html_safe%>]
		}
	],
	"x_axis":{
		"stroke":1,
		"tick_height":10,
		"grid_colour":"#00ff00",
		"labels": {
			"labels": [<%=@study_subjects.collect{|s| "\"#{s.vital_status}\""}.join(',').html_safe%>]
		}
	},
	"y_axis":{
		"stroke":      1,
		"tick_length": 3,
		"grid_colour": "#00ff00",
		"offset":      0,
		"max":         <%=@study_subjects.collect{|s|s.count.to_i}.max.chart_round%>
	}
}
