{
  "title":{
    "text":  "Vital Status Counts",
    "style": "{font-size: 18px; font-family: Verdana; text-align: center;}"
  },
  "elements":[
    {
      "type":      "pie",
      "alpha":     0.5,
<%# this results in an even distributed gray scale. -%>
      "colours":   [<%=@study_subjects.length.times.collect{|i|"\"##{sprintf('%06s',(i*(16777215/@study_subjects.length).to_i).to_s(16)).gsub(' ','0')}\""}.join(",") -%>],
      "font-size": 10,
      "values" :   [ <%=@study_subjects.collect{|s| "{ \"value\": #{s.count}, \"label\": \"#{s.vital_status}\"}" }.join(',')%> ]
    }
  ]
}
