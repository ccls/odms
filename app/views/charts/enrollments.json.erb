{
	"title":{
		"text":  "Enrollment Counts",
		"style": "{font-size: 18px; font-family: Verdana; text-align: center;}"
	},
	"x_legend":{
		"text": "Project",
		"style": "{font-size: 12px;}"
	},
	"y_legend":{
		"text": "Count",
		"style": "{font-size: 12px;}"
	},
	"elements":[
		{
			"type":      "bar_filled",
			"alpha":     0.5,
			"colour":    "#CC9933",
			"font-size": 10,
			"values" :   [<%=@enrollments.collect(&:count).join(',')%>]
		}
	],
	"x_axis":{
		"stroke":1,
		"tick_height":10,
		"grid_colour":"#00ff00",
		"labels": {
			"labels": [<%=@enrollments.collect{|e| "\"#{e.project}\""}.join(',')%>]
		}
	},
	"y_axis":{
		"stroke":      1,
		"tick_length": 3,
		"grid_colour": "#00ff00",
		"offset":      0,
		"max":         <%=@enrollments.collect{|e|e.count.to_i}.max%>
	}
}
