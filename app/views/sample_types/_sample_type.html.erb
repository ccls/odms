<%= content_tag_for( :tr, sample_type, :class => 'row' ) do %>
 <td class='id'><%= sample_type.id -%></td>
 <td class='parent_id'><%= sample_type.parent_id -%></td>
 <td class='key'><%= sample_type.key -%></td>
 <td class='description'><%= sample_type.description -%></td>
 <td class='for_new_sample'><%= sample_type.for_new_sample -%></td>
 <td class='gegl_sample_type_id'><%= sample_type.gegl_sample_type_id -%></td>
 <td class='samples_count'><%= link_to sample_type.samples.count, find_samples_path(:sample_type_id => sample_type.id), :class => :button -%></td>
 <td class='manage'>
<%= link_to( "View", sample_type_path(sample_type), :class => 'button' ) -%>&nbsp;
<%= link_to( "Edit", edit_sample_type_path(sample_type), :class => 'button' ) -%>&nbsp;
<%= form_tag sample_type, :method => :delete, :class => 'destroy_link_to' do %>
<%= hidden_field_tag 'confirm', "Destroy sample_type '#{sample_type}'?", :id => nil %>
<%= submit_tag 'Destroy', :name => nil %>
<% end %>
 </td>
<% end %><!-- class='sample_type' -->
<% if sample_type.is_root? && sample_type.children.length > 0 %>
<%= render :partial => 'sample_type', :collection => sample_type.children %>
<% end %>
