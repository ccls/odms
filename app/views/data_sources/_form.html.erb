<h4><%= ( (@data_source.new_record?)?'Creating':'Editting' ) %> data_source</h4>

<%= form_for(@data_source, :html => { :class => 'edit_data_source'} ) do |f| %>
<%= f.error_messages %>
<%= f.wrapped_text_field :key %>
<%= f.wrapped_text_field :description %>
<p>
<%= f.submit( (@data_source.new_record?)? "Create" : "Update" )%>&nbsp;
<%= link_to 'Back', data_sources_path, :class => 'button' %>
</p>
<% end %>
