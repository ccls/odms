<%= content_tag_for( :tr, diagnosis, :class => 'row' ) do %>
 <td class='key'><%= diagnosis.key -%></td>
 <td class='description'><%= diagnosis.description -%></td>
 <td class='manage'>
<%= link_to( "View", diagnosis_path(diagnosis), :class => 'button' ) -%>&nbsp;
<%= link_to( "Edit", edit_diagnosis_path(diagnosis), :class => 'button' ) -%>&nbsp;
<%= form_tag diagnosis, :method => :delete, :class => 'destroy_link_to' do %>
<%= hidden_field_tag 'confirm', "Destroy diagnosis '#{diagnosis}'?", :id => nil %>
<%= submit_tag 'Destroy', :name => nil %>
<% end %>
 </td>
<% end %><!-- class='diagnosis' -->
