<%= form_for(@abstract,:url => abstract_bone_marrow_path(@abstract)) do |f| %>

<%= f.error_messages %>

<fieldset><legend><%= @page_title %></legend>

<%= f.wrapped_yndk_select(:marrow_biopsy_report_found,
	:label_text => "Biopsy Found?") %>
<%= f.wrapped_date_text_field(:marrow_biopsy_on,
	:label_text => "Date") %>
<%= f.wrapped_text_area(:marrow_biopsy_diagnosis,
	:class => 'autosize',
	:label_text => "Diag/Intrep") %>

<%= f.wrapped_yndk_select(:marrow_aspirate_report_found,
	:label_text => "Aspiration Found?") %>
<%= f.wrapped_date_text_field(:marrow_aspirate_taken_on,
	:label_text => "Date") %>
<%= f.wrapped_text_area(:marrow_aspirate_diagnosis,
	:class => 'autosize',
	:label_text => "Diagnosis/Interpretation") %>

</fieldset>

<%= f.submit_bar() %>
<% end %>
