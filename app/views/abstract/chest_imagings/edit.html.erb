<%= form_for(@abstract,:url => abstract_chest_imaging_path(@abstract)) do |f| %>

<%= f.error_messages %>

<fieldset><legend><%= @page_title %></legend>

<%= f.wrapped_yndk_select(:chest_imaging_report_found,
	:label_text => "Found?") %>
<%= f.wrapped_date_text_field(:chest_imaging_report_on,
	:label_text => "Date" ) %>
<%= f.wrapped_yndk_select(:mediastinal_mass_present,
	:label_text => "Mediastinal mass") %>
<%= f.wrapped_text_area(:chest_imaging_comment,
	:class => 'autosize',
	:label_text => "Comments:") %>

</fieldset>

<%= f.submit_bar(controller.class.name) %>
<% end %>
