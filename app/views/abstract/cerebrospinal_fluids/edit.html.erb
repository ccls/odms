<% sub_menu_for(@study_subject) %>

<%= form_for(@abstract,
	:url => abstract_cerebrospinal_fluid_path(@abstract),
	:html => { :class => 'cerebrospinal_fluid' } ) do |f| %>

<%= f.error_messages %>

<fieldset><legend><%= @page_title %></legend>

<%= f.wrapped_yndk_select(:cerebrospinal_fluid_report_found,
	:label_text => "Found?") %>
<%= f.wrapped_date_text_field(:csf_report_on,
	:label_text => "Date") %>
<%= f.wrapped_text_field(:csf_white_blood_count,
	:label_text => "WBC*") do %>
	<%= f.wrapped_text_field(:csf_white_blood_count_text,
		:label_text => nbsp) %>
<% end %>
<%= f.wrapped_text_field(:csf_red_blood_count,
	:label_text => "RBC*") do %>
	<%= f.wrapped_text_field(:csf_red_blood_count_text,
		:label_text => nbsp) %>
<% end %>
<%= f.wrapped_text_field(:blasts_are_present,
	:label_text => "Blasts present:") do %>
	<%= f.wrapped_text_field(:number_of_blasts,
		:label_text => "number:") %>
<% end %>
<%= f.wrapped_text_field(:peripheral_blood_in_csf,
	:label_text => "PB contamination:") %>
<%= f.wrapped_text_area(:csf_comment,
	:class => "autosize",
	:label_text => "Cytology") %>

<p>* Enter Numerical data only</p>

</fieldset>

<%= f.submit_bar(controller.class.name) %>
<% end %>
