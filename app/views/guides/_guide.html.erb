<%= content_tag_for( :tr, guide, :class => 'row' ) do %>
 <td class='controller'><%= guide.controller -%></td>
 <td class='action'><%= guide.action -%></td>
 <td class='manage'>
<%= link_to( "View", guide_path(guide), :class => 'button' ) -%>&nbsp;
<%= link_to( "Edit", edit_guide_path(guide), :class => 'button' ) -%>&nbsp;
<%= form_tag guide, :method => :delete, :class => 'destroy_link_to' do %>
<%= hidden_field_tag 'confirm', "Destroy guide '#{guide}'?", :id => nil %>
<%= submit_tag 'Destroy', :name => nil %>
<% end %>
 </td>
<% end %><!-- class='guide' -->
