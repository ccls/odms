<h4>Guides:</h4>
<% unless @guides.to_a.empty? %>
 <table id='guides'><thead><tr>
  <th>Controller</th>
  <th>Action</th>
  <th>&nbsp;</th>
 </tr></thead><tbody>
  <%= render :partial => 'guide', :collection => @guides %>
 </tbody></table><!-- id='guides' -->
<% else %>
 <p>Sorry, no guides yet.</p>
<% end %>
<p><%= link_to( "Create new guide", new_guide_path,
	:class => 'button' ) %></p>
