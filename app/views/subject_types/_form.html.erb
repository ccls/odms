<h4><%= ( (@subject_type.new_record?)?'Creating':'Editting' ) %> subject_type</h4>

<%= form_for(@subject_type, :html => { :class => 'edit_subject_type'} ) do |f| %>
<%= f.error_messages %>
<%= f.wrapped_text_field :key %>
<%= f.wrapped_text_field :description %>
<p>
<%= f.submit( (@subject_type.new_record?)? "Create" : "Update" )%>&nbsp;
<%= link_to 'Back', subject_types_path, :class => 'button' %>
</p>
<% end %>
