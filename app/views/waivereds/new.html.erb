<%# stylesheets('base/jquery.ui.all.css') %><%# for datepicker %>
<% stylesheets(:raf) %>

<h3>Rapid Ascertainment Form (RAF) - waiver version</h3>

<% form_for(@subject, :url => waivered_path,
	:html => { :class => 'waivered raf edit_subject' }) do |f| %>

<%= f.error_messages %>
<%#= f.hidden_field :subject_type_id, :value => SubjectType['Case'].id %>

<h3>Section 1: Preliminary Information
<span><span class='required'>*</span>required fields</span>
</h3>
<%= render :partial => 'subjects/prelim_form', :locals => {:f=>f} %>
<%= render :partial => 'prelim_addition', :locals => {:f=>f} %>
<h3>Section 2: Eligibility Criteria</h3>
<%= render :partial => 'eligibility_form', :locals => {:f=>f} %>
<h3>Section 3: Informed Consent</h3>
<%= render :partial => 'consent_form', :locals => {:f=>f} %>
<h3>Section 4: Child and Parent Information</h3>
<%= render :partial => 'subjects/child_parent_form', :locals => {:f=>f} %>
<%= render :partial => 'subjects/current_address_form', :locals => {:f=>f} %>

<p class='submit_bar'><%= f.submit_link_to 'Create new waivered case subject' %></p>
<% end %>
