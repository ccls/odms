<%= content_tag_for( :tr, project, :class => 'row' ) do %>
 <td class='position'><%= project.position %></td>
 <td class='label'><%= project.label %></td>
 <td class='key'><%= project.key %></td>
 <td class='description'><%= project.description %></td>
 <td class='manage'>
  <%= link_to( "View", project_path(project), :class => 'button' ) -%>&nbsp;
  <%= link_to( "Edit", edit_project_path(project), :class => 'button' ) -%>&nbsp;
<%= form_tag project, :method => :delete, :class => 'destroy_link_to' do %>
<%= hidden_field_tag 'confirm', "Destroy project '#{project}'?", :id => nil %>
<%= submit_tag 'Destroy', :name => nil %>
<% end %>
 </td>
<% end %>
