<%#= text_field_tag( :assigned_for_interview_at, params[:assigned_for_interview_at], :class => :datepicker ) %>

<table class='nowrap'>
<thead><tr>
<th>&nbsp;</th>
<th>reference_date</th>
<th>case_icfmasterid</th>
<th>icf_master_id</th>
<th>mom_icfmasterid</th>
