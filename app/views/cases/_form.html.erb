<%= f.fields_for :patient do |patient_fields| %>

<div class='study_subject_fields'>
<h3>Section 1: Preliminary Information
<span><span class='required'>*</span>required fields</span>
</h3>
<%= render 'prelim_info', :f=>f, :patient_fields => patient_fields %>
<%= render 'prelim_addition', :f=>f, :patient_fields => patient_fields %>
<h3>Section 2: Eligibility Criteria</h3>
<%= render 'eligibility_criteria', :f=>f, :patient_fields => patient_fields %>
<h3>Section 3: Informed Consent</h3>
<%= render 'informed_consent', :f=>f, :patient_fields => patient_fields %>
<h3>Section 4: Child and Parent Information</h3>
<%= render 'child_parent_form', :f=>f, :patient_fields => patient_fields %>
<%= render 'contact_info', :f=>f, :patient_fields => patient_fields %>
</div><!-- class='study_subject_fields' -->

<% end %><%# f.fields_for :patient do |patient_fields| %>
