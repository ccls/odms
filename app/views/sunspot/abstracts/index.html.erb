<div id='refine'>
	<%= form_tag( sunspot_abstracts_path, :method => :get ) do %>
		<%= submit_tag "Search Abstracts", :name => nil %><br/>

		<%#	preserve the order and direction on next search %>
		<%# could also save in session as do elsewhere? %>
		<%= hidden_field_tag :order, params[:order] %>
		<%= hidden_field_tag :dir, params[:dir] %>

		<div class='field_wrapper'><span>query</span>
			<%= text_field_tag :q, params[:q], :class => :autosize, :title => 'This text is searched for in all abstract fields, plus subject fields: icf_master_id, patid, subjectid, vital status, dob, hospital, diagnosis and phase' %>
		</div>

		<%= render 'facets' %>
		<%= render 'per_page' %>

	<% end %><%# form_tag -%>
	<%= render 'download_csv' %>
</div>
<%= render 'results' %>
