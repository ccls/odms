<script src="//maps.googleapis.com/maps/api/js?key=AIzaSyDrp6CvtDFWiI5SNvmwy-iN39uP0ZRSTs4&v=3.exp&sensor=false"></script>
<div id='map_wrapper' style='height:100%;margin:0;padding:0;'>
<div id='map_canvas'  style='height:100%;margin:0;padding:0;'></div>
</div>
<%= javascript_tag do %>
	var map;
	var marker;
	function initialize_map() {
		var latlng = new google.maps.LatLng(-34.397, 150.644);
		var mapOptions = {
			zoom: 8,
			center: latlng,
			mapTypeId: google.maps.MapTypeId.ROADMAP
		}
		map = new google.maps.Map(document.getElementById('map_canvas'), mapOptions);
		marker = new google.maps.Marker({
			map: map,
			draggable: true
		});
	}
	google.maps.event.addDomListener(window, 'load', initialize_map);

<% end %>
