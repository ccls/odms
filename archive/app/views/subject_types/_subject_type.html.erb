<%= content_tag_for( :tr, subject_type, :class => 'row' ) do %>
 <td class='key'><%= subject_type.key -%></td>
 <td class='description'><%= subject_type.description -%></td>
 <td class='manage'>
<%= link_to( "View", subject_type_path(subject_type), :class => 'button' ) -%>&nbsp;
<%= link_to( "Edit", edit_subject_type_path(subject_type), :class => 'button' ) -%>&nbsp;
<%= form_tag subject_type, :method => :delete, :class => 'destroy_link_to' do %>
<%= hidden_field_tag 'confirm', "Destroy subject_type '#{subject_type}'?", :id => nil %>
<%= submit_tag 'Destroy', :name => nil %>
<% end %>
 </td>
<% end %><!-- class='subject_type' -->
